package  {		import flash.display.MovieClip;	import flash.display.Stage;		import General.Input		import flash.events.Event;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class Main extends MovieClip {		public static var controller:Controller;		//public static var soundController:SoundController;				private var m_input:Input;				public function Main() {			stage.frameRate = 1 / Config.PHYSICS_TIME_STEP;							m_input = new Input(this);			controller = new Controller();			addChild(Controller.c_sprite);			Controller.c_sprite.x = stage.stageWidth/2;			Controller.c_sprite.y = stage.stageHeight/2;						//soundController = new SoundController();						var timer:Timer = new Timer(1000);			timer.start();						timer.addEventListener(TimerEvent.TIMER,function(e:TimerEvent){										stage.addEventListener(Event.ENTER_FRAME,function(e:Event){controller.update();});										e.target.removeEventListener(TimerEvent.TIMER,arguments.callee);										e.target.stop();										trace("timer");								   });		}					}	}